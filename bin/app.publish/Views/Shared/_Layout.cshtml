                        {
                            <ul class="nav navbar-nav">
                                <li class="nav-item">
                                    @Html.ActionLink("Categorias", "Index", "Categoria", new { area = "" }, new { @class = "navbar-brand" })
                                    @Html.ActionLink("Preguntas Frecuentes", "Index", "Preguntas", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                            </ul>
                        }
                    </div>

                </div>
            </div>
