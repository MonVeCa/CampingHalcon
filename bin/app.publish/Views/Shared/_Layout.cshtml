@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        body {
            background-image: url(/Content/imgPrueba/fondo1.jpg);
        }
    </style>
</head>
<body>
    <div class="container" style="background-color: white">

        <!--Prueba de contenedor con texto-->
        <!--***************************************************************************************************************************-->
        <div class="container" style="width:100%; margin-top:20px; ">


            <div class="container" style="width:100%; margin-top:20px; ">
                <img src="~/Content/imgPrueba/logo1.jpg" width="100" height="100" />
                <div class="titulo">
                    <div class="contenedor"><b style="font-family:'Brush Script MT'; font-size:300%; color:black;">Camping-Halcón</b></div>
                    <br />
                    <div class="contenedor"><b style="font-family:'Brush Script MT'; font-size:200%; color:black;">Slogan</b></div>
                </div>
                @if (!Request.IsAuthenticated)
                {
                    <div class="titulo2">
                        @Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })
                    </div>
                }
                else
                {
                    <div class="titulo2">
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <a class="btn btn-default" type="button" style="background-color:white;" href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesión</a>
                            <a href="@Url.Action("Index", "Manage", null)"><img src="~/Content/imgPrueba/user.png" style="margin-left: 30px;" width="50" height="50 " /></a>

                            <a href="@Url.Action("Index", "Carrito", null)">

                                <img src="~/Content/imgPrueba/carrito.png" style="margin-left: 30px;" width="50" height="50" />
                                <div class="contador-carrito">@CampingHalconMVC.Models.CarritoModel.ContadorProductos(User.Identity.Name)</div>
                            </a>


                        }

                    </div>
                }

            </div>



            <style>
                .contador-carrito {
                    position: absolute;
                    top: -5px;
                    right: 15px;
                    color: black;
                    font-size: 18px;
                }

                .contenedor-carrito {
                    position: relative;
                    text-align: center;
                    color: white;
                }

                .contenedor {
                    position: relative;
                    display: inline-block;
                    text-align: center;
                }

                .contenedor2 {
                    position: relative;
                    display: inline-block;
                }


                .centrado {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }

                .centrado2 {
                    position: absolute;
                    top: 70%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }

                .titulo {
                    position: absolute;
                    display: inline-block;
                }

                .titulo2 {
                    position: absolute;
                    display: inline-block;
                    left: 65%;
                    top: 12%;
                }
            </style>
            <!--***************************************************************************************************************************-->
            <!---->
            <br />
            <div class="navbar navbar-inverse ">
