
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    <style>
        body {
            background-image: url(/Content/imgPrueba/fondo1.jpg);
        }
    </style>
</head>
<body>
    <div class="container" style="background-color: white">

        <!--Prueba de contenedor con texto-->
        <!--***************************************************************************************************************************-->
        <div class="container" style="width:100%; margin-top:20px; ">


            <div class="container" style="width:100%; margin-top:20px; ">
                <img src="~/Content/imgPrueba/logo1.jpg" width="100" height="100" />
                <div class="titulo">
                    <div class="contenedor"><b style="font-family:'Brush Script MT'; font-size:300%; color:black;">Camping-Halcón</b></div>
                    <br />
                    <div class="contenedor"><b style="font-family:'Brush Script MT'; font-size:200%; color:black;">Slogan</b></div>
                </div>
                <div class="titulo2">
                    <button type="button" style="background-color:white; ">Iniciar sesión</button>
                    <img src="~/Content/imgPrueba/user.png" style="margin-left: 30px;" width="50" height="50 " />
                    <img src="~/Content/imgPrueba/carrito.png" style="margin-left: 30px;" width="50" height="50" />
                </div>
            </div>



            <style>
                .contenedor {
                    position: relative;
                    display: inline-block;
                    text-align: center;
                }

                .contenedor2 {
                    position: relative;
                    display: inline-block;
                }


                .centrado {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }

                .centrado2 {
                    position: absolute;
                    top: 70%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }

                .titulo {
                    position: absolute;
                    display: inline-block;
                }

                .titulo2 {
                    position: absolute;
                    display: inline-block;
                    left: 65%;
                    top: 12%;
                }
            </style>
            <!--***************************************************************************************************************************-->
            <!---->
            <br />
            <div class="navbar navbar-inverse ">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>                       

                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">

                            <ul class="nav navbar-nav">
                                <li class="nav-item">
                                    @Html.ActionLink("Empleado", "Categorias", "Categoria", new { area = "" }, new { @class = "navbar-brand" })
                                    @Html.ActionLink("Paqueteria", "PruebaView", "Prueba", new { area = "" }, new { @class = "navbar-brand" })
                                    @Html.ActionLink("Categoria", "PruebaView", "Prueba", new { area = "" }, new { @class = "navbar-brand" })
                                    @Html.ActionLink("Productos", "PruebaView", "Prueba", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                            </ul>
                    </div>

                </div>
            </div>

            <div id="layoutAuthentication">
                <div id="layoutAuthentication_content">
                    <main>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-5">
                                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                        <div class="card-body">
                                            <form action="@Url.Content("~/Login/Index")" method="post">
                                                @Html.AntiForgeryToken()
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputEmail" name="NCorreo" type="email" placeholder="name@example.com" @*value="pruebas@gmail.com"*@ value="admin@example.com" />
                                                    <label for="inputEmail">Correo</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" @*value="12345"*@ autocomplete="off" value="admin123" />
                                                    <label for="inputPassword">Contraseña</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    @{if (ViewBag.Error != null)
                                                        {
                                                            <div class="alert alert-danger" role="alert">
                                                                @ViewBag.Error
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                    <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                                                </div>
                                                
                                            </form>

                                        </div>

                                        <div class="card-footer text-center py-3">
                                            <div class="small"><a id="publicidad_cuenta" href="@Url.Action("Registrarse","Login")">Registrarse</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
                
            </div>
        </div>
    </div>

    <div class="container" style="background-color: #232120;">
        <div class="contenedor2">

            <p style="color:white; font-size:100%; ">Contactanos: </p>
            <p style="color:white;">
                Av. Universidad 1200, Col. Xoco, Ciudad de México, Alcaldía Benito Juárez C.P. 03330 <br />
                Tel: 123456789 <br />
                Email: contacto@tecnm.m
            </p>
            <p style="color:white;">
                Redes sociales:
            </p>

            <div>
                <div class="contenedor">
                    <img src="~/Content/imgPrueba/f.png" width="50" height="50" />

                </div>

                <div class="contenedor">
                    <img src="~/Content/imgPrueba/t.png" width="50" height="50" />

                </div>
                <div class="contenedor">
                    <img src="~/Content/imgPrueba/i.png" width="50" height="50" />

                </div>


            </div>

            <p style="color:white;">&copy; @DateTime.Now.Year - Equipo 4</p>
        </div>

        <div class="contenedor">

            <p style="color: #232120;">
                Av. Universidad 1200, Col. Xoco, Ciuda
            </p>
        </div>

        <div class="titulo">
            <div>
                <div class="contenedor">
                    <img src="~/Content/imgPrueba/logo1.jpg" width="80" height="80" />


                    <div class="contenedor" style="margin-left: 30px;">
                        <br />
                        <br />
                        <p style="color:white;">Tarjetas:</p>
                        <div class="contenedor">
                            <img src="~/Content/imgPrueba/tarjeta1.png" width="50" height="50" />

                        </div>
                        <div class="contenedor">
                            <img src="~/Content/imgPrueba/tarjeta2.png" width="50" height="50" />

                        </div>

                    </div>
                </div>
            </div>
            <br />
            <br />

            <p style="color:white;">
                Instituto Tecnologico de Toluca, E-commerce 2022
            </p>

        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>

    </script>
</body>
</html>
