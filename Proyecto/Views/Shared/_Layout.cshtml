                                    @Html.ActionLink("Paqueteria", "PruebaView", "Prueba", new { area = "" }, new { @class = "navbar-brand" })
                                    @Html.ActionLink("Categoria", "PruebaView", "Prueba", new { area = "" }, new { @class = "navbar-brand" })
